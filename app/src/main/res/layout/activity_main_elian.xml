                android:layout_height="wrap_content"
                android:text="@string/botProd"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/boton9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="@string/bot9"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/botonEquals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/design_default_color_error"
                android:text="@string/botEq"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/botonCE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/design_default_color_error"
                android:text="@string/botCE"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/botonEntre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/botDiv"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginStart="88dp"
            >

            <Button
                android:id="@+id/botonCE1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/design_default_color_error"
                android:text="@string/botCE1"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/botonPunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/design_default_color_error"
                android:text="@string/botDecim"
                android:textSize="25dp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>